<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".option">

    <Spinner
        android:id="@+id/spinner_3"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:entries="@array/rn"></Spinner>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="-150dp"
        android:layout_marginTop="150dp"
        android:entries="@array/time"></Spinner>

    <Spinner
        android:id="@+id/spinner_2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="-150dp"
        android:layout_marginTop="200dp"
        android:entries="@array/location"></Spinner>

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="0"
        android:textSize="20sp"
        android:layout_marginLeft="-150dp"
        android:layout_marginTop="350dp"/>


    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:text="증가"/>

    <Button
        android:id="@+id/btn_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:text="감소"/>


    <TextView
        android:id="@+id/tv_result"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="time" />

    <TextView
        android:id="@+id/tv_result2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="location" />
    <TextView
        android:id="@+id/tv_result3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="rn" />

    <Button
        android:id="@+id/add_btn1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-230dp"
        android:layout_marginTop="500dp"
        android:text="메뉴선택" />

    <Button
        android:id="@+id/add_btn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-0dp"
        android:layout_marginTop="500dp"
        android:text="등록" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="500dp"
        android:onClick="goNativeActivity"
        android:text="결제"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-260dp"
        android:layout_marginTop="300dp"
        android:text="총 결제금액 (배달비 포함)"
        android:textColor="#000000"
        android:textSize="15sp" />

</LinearLayout>